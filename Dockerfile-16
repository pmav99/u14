 # cleanup
 #&& apt-get autoremove -y \
 #&& apt-get clean \
 #&& rm -rf /var/lib/apt/lists/* \
           #/var/tmp/* \
           #/tmp/*
 && git clone https://github.com/pmav99/dotfiles.git /root/dotfiles \
