 && apt-get update \
 && apt-get install \
        -y \
        --no-install-recommends \
        --no-install-suggests \
        apt-fast \
 && apt-fast install \
        -y \
        --no-install-recommends \
        --no-install-suggests \
        build-essential \
        libcurl4-openssl-dev \
        libffi-dev \
        libssl-dev \
        libpq-dev \
        git \
        vim \
        curl \
        wget \
